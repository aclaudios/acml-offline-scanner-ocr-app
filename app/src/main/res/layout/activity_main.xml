<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    tools:context=".MainActivity">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_card"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="@dimen/spacing_large"
            android:paddingEnd="@dimen/spacing_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Logo -->
                <View
                    android:id="@+id/logo"
                    android:layout_width="@dimen/logo_size"
                    android:layout_height="@dimen/logo_size"
                    android:background="@drawable/bg_logo"
                    android:contentDescription="@string/logo_description" />

                <!-- Title -->
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:text="@string/app_title"
                    android:textAppearance="@style/TextAppearance.Title" />

                <!-- Exit Button -->
                <Button
                    android:id="@+id/btn_exit_toolbar"
                    style="@style/ButtonSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_exit"
                    android:drawablePadding="@dimen/spacing_small"
                    android:paddingStart="@dimen/padding_medium"
                    android:paddingEnd="@dimen/padding_medium"
                    android:text="@string/exit" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xlarge">

            <!-- Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/main_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardCornerRadius="@dimen/radius_xlarge"
                app:cardElevation="@dimen/elevation_card"
                app:contentPadding="0dp"
                app:strokeColor="@color/bg_border"
                app:strokeWidth="@dimen/border_width">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_card"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_large">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/card_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/document"
                                android:textAppearance="@style/TextAppearance.Title" />

                            <TextView
                                android:id="@+id/card_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:text="@string/capture_hint"
                                android:textAppearance="@style/TextAppearance.Subtitle" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_gallery"
                            style="@style/ButtonSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_gallery"
                            android:drawablePadding="@dimen/spacing_small"
                            android:paddingStart="@dimen/padding_medium"
                            android:paddingEnd="@dimen/padding_medium"
                            android:text="@string/gallery" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/border_width"
                        android:background="@color/bg_border" />

                    <!-- Card Body -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_xlarge">

                        <!-- Capture Section -->
                        <LinearLayout
                            android:id="@+id/capture_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_capture"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/padding_normal">

                            <ImageView
                                android:id="@+id/camera_icon"
                                android:layout_width="@dimen/icon_large"
                                android:layout_height="@dimen/icon_large"
                                android:contentDescription="@string/camera_icon_description"
                                android:src="@drawable/ic_camera" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_normal"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/capture_document"
                                    android:textAppearance="@style/TextAppearance.Body"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/capture_description"
                                    android:textAppearance="@style/TextAppearance.Subtitle" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/btn_capture"
                                style="@style/ButtonPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_medium"
                                android:paddingStart="@dimen/padding_normal"
                                android:paddingEnd="@dimen/padding_normal"
                                android:text="@string/capture_button" />

                        </LinearLayout>

                        <!-- Document Preview -->
                        <FrameLayout
                            android:id="@+id/document_preview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:background="@drawable/bg_document"
                            android:contentDescription="@string/document_preview_description"
                            android:padding="@dimen/padding_large">

                            <LinearLayout
                                android:id="@+id/placeholder_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spacing_medium"
                                android:background="@drawable/bg_doc_sheet"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_large"
                                android:minHeight="280dp">

                                <!-- Simulated document lines -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:layout_marginTop="@dimen/spacing_small"
                                    android:background="@color/doc_line" />

                                <View
                                    android:layout_width="200dp"
                                    android:layout_height="10dp"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:background="@color/doc_line" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:background="@color/doc_line" />

                                <View
                                    android:layout_width="150dp"
                                    android:layout_height="10dp"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:background="@color/doc_line" />

                                <View
                                    android:layout_width="250dp"
                                    android:layout_height="10dp"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:background="@color/doc_line" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/captured_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spacing_medium"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:visibility="gone"
                                android:contentDescription="@string/captured_image_description" />

                        </FrameLayout>

                        <!-- OCR Result Section -->
                        <LinearLayout
                            android:id="@+id/ocr_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:background="@drawable/bg_ocr"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_normal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/recognized_text"
                                android:textAppearance="@style/TextAppearance.Title" />

                            <TextView
                                android:id="@+id/ocr_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_small"
                                android:fontFamily="monospace"
                                android:text="@string/no_text"
                                android:textAppearance="@style/TextAppearance.Body"
                                android:textColor="@color/doc_line" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Actions Bar -->
    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bg_surface"
        android:elevation="8dp"
        android:orientation="vertical">

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large">

            <Button
                android:id="@+id/btn_save_pdf"
                style="@style/ButtonSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_save"
                android:drawablePadding="@dimen/spacing_small"
                android:text="@string/save_pdf" />

            <Button
                android:id="@+id/btn_share"
                style="@style/ButtonSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_share"
                android:drawablePadding="@dimen/spacing_small"
                android:text="@string/share" />

            <Button
                android:id="@+id/btn_copy"
                style="@style/ButtonSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_copy"
                android:drawablePadding="@dimen/spacing_small"
                android:text="@string/copy_text" />

            <Button
                android:id="@+id/btn_exit"
                style="@style/ButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_exit"
                android:drawablePadding="@dimen/spacing_small"
                android:text="@string/exit" />

        </LinearLayout>

        <!-- Credits -->
        <TextView
            android:id="@+id/credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/spacing_small"
            android:text="@string/credits"
            android:textAppearance="@style/TextAppearance.Subtitle"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
